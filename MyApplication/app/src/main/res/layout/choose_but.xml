<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_but"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/choose_but_border"
    android:clickable="false"
    android:padding="2dp"
    android:layout_margin="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_view_food_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        >
        <ImageView
            android:id="@+id/image_view_food_but"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/banana" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_view_name_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:text="בננה"
        android:textAppearance="?android:attr/textAppearanceListItemSmall" />

    <Button
        android:id="@+id/remove_chosen_but"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:clickable="true" />


</LinearLayout>