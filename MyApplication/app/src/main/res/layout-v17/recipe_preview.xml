<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_preview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/ripple_bg"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/recipe_preview_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="4dp"
            >

            <ImageView
                android:id="@+id/image_view_food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:src="@drawable/banana" />
            <RadioButton
                android:id="@+id/radioButtonfavor"
                android:layout_width="23dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:button="@drawable/ic_star_black_24dp" />
        </androidx.cardview.widget.CardView>

        <TableRow
            android:id="@+id/name_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layoutDirection="rtl">

            <TextView
                android:id="@+id/text_view_name_recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="11dp"
                android:clickable="false"
                android:editable="false"
                android:paddingStart="8dp"
                android:text="שם המנה:"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />

            <TextView
                android:id="@+id/text_view_recipe_name_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="בננה"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
        </TableRow>

        <TableRow
            android:id="@+id/chef_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layoutDirection="rtl">

            <TextView
                android:id="@+id/text_view_chef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="11dp"
                android:clickable="false"
                android:editable="false"
                android:paddingStart="8dp"
                android:text="שף:"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />

            <TextView
                android:id="@+id/text_view_name_chef_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="בננה"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
        </TableRow>

        <TableRow
            android:id="@+id/spices_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layoutDirection="rtl">

            <TextView
                android:id="@+id/text_view_spices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="11dp"
                android:clickable="false"
                android:editable="false"
                android:paddingStart="8dp"
                android:text="תבלינים נחוצים:"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />

            <TextView
                android:id="@+id/text_view_name_spices_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="בננה"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
        </TableRow>

        <TableRow
            android:id="@+id/description_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layoutDirection="rtl">

            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="11dp"
                android:clickable="false"
                android:editable="false"
                android:paddingStart="8dp"
                android:text="תיאור:"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />

            <TextView
                android:id="@+id/text_view_name_description_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="בננה"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
        </TableRow>

    </LinearLayout>

</RelativeLayout>